---
import { MapPin } from "@lucide/astro";
---
<div class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2
      class="text-3xl font-bold text-gray-900 mb-12 text-center flex items-center justify-center gap-3"
    >
      <MapPin class="w-8 h-8 text-pink-700" />
      Experiencia Clínica
    </h2>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="bg-white p-8 rounded-xl shadow-lg">
        <h3 class="font-semibold text-gray-900 text-xl mb-2">
          Médico Radiólogo
        </h3>
        <p class="text-pink-700 font-medium text-lg mb-2">
          Hospitales La Paz
        </p>
        <p class="text-gray-600">2016 - actualidad</p>
      </div>
      <div class="bg-white p-8 rounded-xl shadow-lg">
        <h3 class="font-semibold text-gray-900 text-xl mb-2">
          Fundadora y Radióloga Encargada
        </h3>
        <p class="text-pink-700 font-medium text-lg mb-2">
          Clínica DeltaScan
        </p>
        <p class="text-gray-600">2017 - actualidad</p>
      </div>
    </div>
  </div>
</div>
