---
import { CheckCircle, Phone } from "@lucide/astro";
const recommendations = [
  {
    title: "Síntomas del tracto urinario bajo",
    description:
      "dificultad para iniciar o mantener el flujo de orina, urgencia miccional y aumento de la frecuencia nocturna.",
  },
  {
    title: "Sospecha clínica",
    description:
      "hallazgos anormales en tacto rectal o resultados de laboratorio que sugieran alteraciones prostáticas.",
  },
  {
    title: "Seguimiento de patologías conocidas",
    description:
      "control periódico de enfermedades prostáticas previamente diagnosticadas (Hiperplasia prostática benigna).",
  },
  {
    title: "Evaluación del vaciado vesical",
    description:
      "medición objetiva del volumen de orina antes y después de la micción (pre y postmiccional).",
  },
];
---

<section class="py-20 md:py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto p-8">
    <!-- Título centrado, sin icono y con tamaños una dimensión menores -->
    <div class="mb-12 md:mb-16">
      <h2 class="text-center text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 leading-tight">
        ¿Cuándo se recomienda?
      </h2>
    </div>

    <!-- Sin max-w interno para respetar el ancho de 7xl -->
    <div class="grid gap-6 lg:gap-8">
      {recommendations.map((rec, index) => (
        <div
          key={index}
          class="flex items-start gap-6 p-6 lg:p-8 bg-white rounded-2xl shadow-sm hover:shadow-md transition-shadow"
        >
          <div class="bg-pink-600 p-2 rounded-full flex-shrink-0 mt-1">
            <CheckCircle class="w-5 h-5 text-white" />
          </div>
          <div class="space-y-2">
            <h3 class="text-lg md:text-xl font-bold text-gray-900">
              {rec.title}:
            </h3>
            <p class="text-base md:text-lg text-gray-700 leading-relaxed">
              {rec.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a
        href="/hacer-cita"
        class="inline-flex items-center justify-center px-6 py-3 rounded-xl font-semibold bg-gradient-to-r from-pink-600 to-pink-700 text-white hover:from-pink-700 hover:to-pink-800 transition-colors w-full sm:w-auto"
        aria-label="Agenda tu Cita"
      >
        <Phone class="w-5 h-5 mr-2" />
        Agenda tu Cita
      </a>
    </div>
  </div>
</section>
