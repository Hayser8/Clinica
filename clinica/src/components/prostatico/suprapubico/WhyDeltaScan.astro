---
import { Award, Heart, Zap, Users } from "@lucide/astro";
const features = [
  {
    icon: Award,
    title: "Más de 10 años de trayectoria",
    description: "Experiencia especializada en ecografía diagnóstica",
  },
  {
    icon: Heart,
    title: "Atención personalizada",
    description: "Cada paciente es atendido con cercanía y respeto",
  },
  {
    icon: Zap,
    title: "Tecnología moderna",
    description:
      "Protocolos actualizados para optimizar la calidad de las imágenes",
  },
  {
    icon: Users,
    title: "Análisis doble",
    description:
      "Dos especialistas revisan tu estudio para mayor confiabilidad",
  },
];
---

<section class="bg-white py-16 md:py-24">
  <div class="max-w-7xl mx-auto p-8">
    <div class="text-center mb-16">
      <h2
        class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 mb-8 text-balance"
      >
        ¿Por qué DeltaScan es tu clínica de ultrasonidos prostáticos
        suprapúbicos?
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {
        features.map((feature, index) => (
          <div
            key={index}
            class="flex items-start gap-6 bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow"
          >
            <div class="bg-pink-600 rounded-2xl p-4 flex-shrink-0">
              <feature.icon class="w-8 h-8 text-white" />
            </div>
            <div class="space-y-3">
              <h3 class="text-xl font-bold text-gray-900">{feature.title}</h3>
              <p class="text-gray-600 leading-relaxed text-pretty">
                {feature.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
