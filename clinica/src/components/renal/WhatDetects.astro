---
import { Phone, Search, Droplets, AlertTriangle, Activity, Zap, ArrowRight, Microscope } from "@lucide/astro"

const detections = [
  {
    icon: Droplets,
    title: "Cálculos renales",
    description: "Litos de diferentes tamaños y composiciones",
    color: "from-blue-500 to-blue-600",
  },
  {
    icon: Activity,
    title: "Quistes",
    description: "Simples o complejos que requieren seguimiento",
    color: "from-green-500 to-green-600",
  },
  {
    icon: AlertTriangle,
    title: "Dilatación",
    description: "Hidronefrosis o hidrouréter",
    color: "from-orange-500 to-orange-600",
  },
  {
    icon: Search,
    title: "Alteraciones",
    description: "Cambios en tamaño o ecogenicidad renal",
    color: "from-purple-500 to-purple-600",
  },
  {
    icon: Microscope,
    title: "Masas",
    description: "Lesiones que ameritan evaluación adicional",
    color: "from-red-500 to-red-600",
  },
  {
    icon: Zap,
    title: "Flujo sanguíneo",
    description: "Evaluación vascular con Doppler",
    color: "from-pink-500 to-pink-600",
  },
]
---
<section
  class="py-20 bg-gradient-to-b from-gray-50 to-white relative overflow-hidden"
>
  <div
    class="absolute top-20 right-10 w-32 h-32 bg-pink-100 rounded-full opacity-20"
  >
  </div>
  <div
    class="absolute bottom-20 left-10 w-24 h-24 bg-pink-200 rounded-full opacity-30"
  >
  </div>

  <div class="max-w-7xl mx-auto p-8 relative z-10">
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center gap-2 bg-pink-100 text-pink-700 px-4 py-2 rounded-full text-sm font-medium mb-6"
      >
        <Search class="w-4 h-4" />
        Capacidades diagnósticas
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
        ¿Qué detecta una ecografía renal?
      </h2>

    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {
        detections.map((detection, index) => {
          const Icon = detection.icon;
          return (
            <div
              key={index}
              class="group bg-white rounded-3xl p-8 shadow-lg border border-gray-100 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 text-center relative overflow-hidden"
            >
              <div class="absolute top-0 right-0 w-20 h-20 bg-gray-50 rounded-full -translate-y-10 translate-x-10 opacity-50" />
              <div
                class={`bg-gradient-to-br ${detection.color} w-16 h-16 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg relative z-10`}
              >
                <Icon class="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">
                {detection.title}
              </h3>
              <p class="text-gray-600 leading-relaxed mb-4">
                {detection.description}
              </p>
              <div class="w-12 h-1 bg-gradient-to-r from-pink-400 to-pink-600 rounded-full mx-auto" />
            </div>
          );
        })
      }
    </div>

    <div class="text-center">
      <div
        class="bg-gradient-to-r from-pink-600 to-pink-700 rounded-3xl p-8 md:p-12 text-white relative overflow-hidden"
      >
        <div class="absolute top-4 left-4 w-16 h-16 bg-white/10 rounded-full">
        </div>
        <div
          class="absolute bottom-4 right-4 w-12 h-12 bg-white/5 rounded-full"
        >
        </div>
        <div class="relative z-10">
          <h3 class="text-2xl md:text-3xl font-bold mb-4">
            Detección temprana, tratamiento oportuno
          </h3>
          <p class="text-pink-100 mb-8 text-lg max-w-2xl mx-auto">
            Un diagnóstico preciso es el primer paso hacia tu bienestar. Agenda
            tu ultrasonido renal hoy.
          </p>
          <a
          href="/hacer-cita"
            class="bg-white text-pink-600 px-10 py-5 rounded-full font-bold text-lg hover:bg-gray-50 transition-all duration-300 inline-flex items-center gap-3 shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
          >
            <Phone class="w-6 h-6" />
            Agenda tu cita
            <ArrowRight class="w-5 h-5" />
        </a>
        </div>
      </div>
    </div>
  </div>
</section>
