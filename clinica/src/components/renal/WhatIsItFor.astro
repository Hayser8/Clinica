---
import {
  Phone,
  Target,
  Search,
  Activity,
  AlertCircle,
  TrendingUp,
  ArrowRight,
} from "@lucide/astro";

const purposes = [
  {
    icon: AlertCircle,
    title: "Dolor lumbar",
    description:
      "Confirma causas renales del dolor en la zona baja de la espalda",
  },
  {
    icon: Search,
    title: "Infecciones recurrentes",
    description:
      "Determina afección renal en infecciones urinarias repetitivas",
  },
  {
    icon: Activity,
    title: "Sangre en orina",
    description: "Evalúa posibles causas de hematuria y alteraciones urinarias",
  },
  {
    icon: TrendingUp,
    title: "Control de enfermedades",
    description: "Seguimiento de enfermedades crónicas y función renal",
  },
];
---

<section class="py-20 bg-white relative overflow-hidden">
  <div
    class="absolute top-10 left-10 w-40 h-40 bg-pink-50 rounded-full opacity-30"
  >
  </div>
  <div
    class="absolute bottom-10 right-10 w-32 h-32 bg-pink-100 rounded-full opacity-20"
  >
  </div>

  <div class="max-w-7xl mx-auto p-8 relative z-10">
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center gap-2 bg-pink-100 text-pink-700 px-4 py-2 rounded-full text-sm font-medium mb-6"
      >
        <Target class="w-4 h-4" />
        Aplicaciones clínicas
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
        ¿Para qué sirve el ultrasonido renal?
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {
        purposes.map((purpose, index) => {
          const Icon = purpose.icon;
          return (
            <div
              key={index}
              class="group bg-white rounded-2xl p-6 shadow-lg border border-gray-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 text-center"
            >
              <div class="bg-gradient-to-br from-pink-500 to-pink-600 w-14 h-14 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
                <Icon class="w-7 h-7 text-white" />
              </div>
              <h3 class="font-bold text-gray-900 mb-2">{purpose.title}</h3>
              <p class="text-sm text-gray-600 leading-relaxed">
                {purpose.description}
              </p>
            </div>
          );
        })
      }
    </div>

    <div class="text-center">
      <div
        class="bg-gradient-to-r from-pink-600 to-pink-700 rounded-3xl p-8 md:p-10 text-white relative overflow-hidden"
      >
        <div class="relative z-10">
          <h3 class="text-2xl font-bold mb-4">
            ¿Tienes síntomas o necesitas un chequeo?
          </h3>
          <p class="text-pink-100 mb-6 text-lg">
            Agenda tu ultrasonido renal y obtén respuestas claras
          </p>
          <a
            href="/hacer-cita"
            class="bg-white text-pink-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-gray-50 transition-all duration-300 inline-flex items-center gap-3 shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
          >
            <Phone class="w-5 h-5" />
            Agenda tu cita
            <ArrowRight class="w-5 h-5" />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
