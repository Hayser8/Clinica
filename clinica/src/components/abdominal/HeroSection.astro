---
import { Phone, Calendar, CheckCircle } from "@lucide/astro";
import Button from "@/components/ui/Button.astro";
---

<section class="bg-gradient-to-br from-pink-600 via-pink-700 to-pink-800 text-white py-24 relative overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-pink-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-pink-400/10 rounded-full blur-2xl"></div>

  <div class="max-w-7xl mx-auto px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-5xl lg:text-7xl font-bold leading-tight">
            Ultrasonido
            <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-200 to-white">abdominal</span>
          </h1>
          <p class="text-2xl text-pink-100 leading-relaxed font-medium">
            Si sientes dolor en tu abdomen, no esperes más
          </p>
        </div>

        <!-- Features destacadas -->
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <div class="bg-white/20 backdrop-blur-sm rounded-full p-2">
              <CheckCircle class="w-5 h-5 text-white" />
            </div>
            <p class="text-pink-100 text-lg">
              <span class="text-white font-semibold">Tecnología de alta calidad</span> para diagnósticos
              precisos
            </p>
          </div>
          <div class="flex items-center gap-3">
            <div class="bg-white/20 backdrop-blur-sm rounded-full p-2">
              <CheckCircle class="w-5 h-5 text-white" />
            </div>
            <p class="text-pink-100 text-lg">
              <span class="text-white font-semibold">Resultados el mismo día</span> para tu tranquilidad
            </p>
          </div>
          <div class="flex items-center gap-3">
            <div class="bg-white/20 backdrop-blur-sm rounded-full p-2">
              <CheckCircle class="w-5 h-5 text-white" />
            </div>
            <p class="text-pink-100 text-lg">
              <span class="text-white font-semibold">+10 años de experiencia</span> en diagnóstico por imágenes
            </p>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <Button
            size="lg"
            class="bg-white text-pink-600 hover:bg-pink-50 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 px-10 py-5 text-xl min-w-[220px] rounded-lg"
          >
            <Phone class="w-6 h-6 mr-3" />
            Hacer Cita
          </Button>
        </div>
      </div>

      <div class="relative">
        <!-- Decorative background -->
        <div class="absolute -inset-4 bg-gradient-to-r from-pink-400/20 to-pink-600/20 rounded-3xl blur-xl"></div>

        <!-- Main image container -->
        <div class="relative rounded-3xl overflow-hidden shadow-2xl border-4 border-white/20 backdrop-blur-sm">
          <img
            src="/abdominal/doctorhaciendoultrasonidoabdominal.webp"
            alt="Doctor realizando ultrasonido abdominal en DeltaScan"
            class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-700"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-pink-900/10 via-transparent to-transparent"></div>
        </div>

        <!-- Floating badges -->
        <div class="absolute -top-4 -right-4 bg-white rounded-2xl p-4 shadow-xl text-center">
          <div class="text-2xl font-bold text-pink-600">2</div>
          <div class="text-xs text-gray-600 font-medium">Radiólogos</div>
        </div>
        <div class="absolute -bottom-4 -left-4 bg-white rounded-2xl p-4 shadow-xl text-center">
          <div class="text-2xl font-bold text-pink-600">15-20</div>
          <div class="text-xs text-gray-600 font-medium">Minutos</div>
        </div>
      </div>
    </div>
  </div>
</section>
