---
import { Calendar, Bed, Droplets, Search, FileText, ClipboardCheck } from "@lucide/astro";

const steps = [
    {
      number: 1,
      icon: Calendar,
      title: "Agenda tu cita",
      description: "Puedes llamarnos o escribirnos por WhatsApp para elegir el horario que mejor se adapte a ti.",
    },
    {
      number: 2,
      icon: FileText,
      title: "Preparación",
      description: "No necesitas ayuno ni indicaciones previas, salvo que tu médico recomiende lo contrario.",
    },
    {
      number: 3,
      icon: Droplets,
      title: "Aplicación de gel",
      description: "Se coloca un gel conductor en el cuello para asegurar la mejor transmisión de las ondas sonoras.",
    },
    {
      number: 4,
      icon: Search,
      title: "Exploración en tiempo real",
      description:
        "El radiólogo mueve el transductor sobre tu cuello, evaluando la tiroides y ajustando la imagen según lo que se necesite observar.",
    },
    {
      number: 5,
      icon: ClipboardCheck,
      title: "Explicación y entrega de resultados",
      description:
        "Recibes tu informe impreso en un folder, junto con la interpretación médica, para que sepas exactamente qué encontraron.",
    },
  ]
---

<section class="py-16 lg:py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto p-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        ¿Cómo es un <span class="text-pink-600">Ultrasonido Tiroideo en DeltaScan</span>?
      </h2>
    </div>

    <div class="relative">
      {/* Timeline line - hidden on mobile */}
      <div
        class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-1 bg-pink-200 h-full"
      >
      </div>

      <div class="space-y-8 lg:space-y-12">
        {
          steps.map((step, index) => {
            const Icon = step.icon;
            const isEven = index % 2 === 0;

            return (
              <div
                key={step.number}
                class={`relative flex items-center ${isEven ? "lg:flex-row" : "lg:flex-row-reverse"}`}
              >
                {/* Timeline dot */}
                <div class="hidden lg:block absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-pink-600 rounded-full border-4 border-white shadow-lg z-10" />

                {/* Content */}
                <div
                  class={`w-full lg:w-5/12 ${isEven ? "lg:pr-8" : "lg:pl-8"}`}
                >
                  <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                    <div class="flex items-start gap-4">
                      <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-pink-600 rounded-full flex items-center justify-center text-white font-bold text-lg">
                          {step.number}
                        </div>
                      </div>
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-3">
                          <Icon class="w-6 h-6 text-pink-600" />
                          <h3 class="text-xl font-semibold text-gray-900">
                            {step.title}
                          </h3>
                        </div>
                        <p class="text-gray-700 leading-relaxed">
                          {step.description}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                {/* Spacer for desktop */}
                <div class="hidden lg:block w-2/12" />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
