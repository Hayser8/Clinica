---
import {
  Phone,
  Mail,
  MapPin,
  Facebook,
  Instagram,
  Youtube,
} from "@lucide/astro";

// 5 servicios destacados (con enlaces a sus páginas)
const services = [
  { name: "Ultrasonido de mama", href: "/mamaria" },
  { name: "Biopsia de mama con guía de ultrasonido", href: "/biopsia-mamaria-ecodirigida" },
  { name: "Doppler vascular", href: "/doppler" },
  { name: "Ultrasonido de abdomen completo", href: "/abdominal" },
  { name: "Ultrasonido musculoesquelético", href: "/musculoesqueletico" },
];

// Enlaces rápidos -> páginas (no anclas)
const quickLinks = [
  { name: "Sobre Nosotros", href: "/sobre-nosotros" },
  { name: "Dr. Estuardo Pérez", href: "/estuardoperez" },
  { name: "Dra. Berta Coto", href: "/bertacoto" },
];
---

<footer class="bg-gradient-to-br from-gray-900 to-gray-800 text-white">
  <div class="max-w-7xl mx-auto p-8">
    {/* Main Footer Content */}
    <div class="grid lg:grid-cols-4 md:grid-cols-2 gap-8 py-12">
      {/* Company Info */}
      <div class="space-y-6">
        <img
          src="/logoprueba.webp"
          alt="DeltaScan"
          width={200}
          height={80}
          class="h-16 w-auto brightness-0 invert"
        />
        <p class="text-gray-300 leading-relaxed">
          Más de una década de experiencia en imágenes diagnósticas con
          tecnología de vanguardia y protocolos actualizados.
        </p>
        <div class="flex space-x-4">
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Facebook class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Instagram class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Youtube class="w-5 h-5" />
          </a>
        </div>
      </div>

      {/* Servicios Destacados */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">Servicios Destacados</h3>
        <ul class="space-y-3">
          {
            services.map((service, index) => (
              <li key={index}>
                <a
                  href={service.href}
                  class="text-gray-300 hover:text-pink-300 transition-colors"
                >
                  {service.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Sobre Nosotros */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">Sobre Nosotros</h3>
        <ul class="space-y-3">
          {
            quickLinks.map((link, index) => (
              <li key={index}>
                <a
                  href={link.href}
                  class="text-gray-300 hover:text-pink-300 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Contacto */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">Contacto</h3>
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <MapPin class="w-5 h-5 text-pink-500 mt-1 flex-shrink-0" />
            <div>
              <p class="text-gray-300">Zona 14, Edificio Prospere</p>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <Phone class="w-5 h-5 text-pink-500 flex-shrink-0" />
            <p class="text-gray-300">2448-1110</p>
          </div>
          <div class="flex items-center space-x-3">
            <Mail class="w-5 h-5 text-pink-500 flex-shrink-0" />
            <p class="text-gray-300">deltascangt@gmail.com</p>
          </div>
          {/* Sin horario, como solicitaste */}
        </div>
      </div>
    </div>

    {/* Bottom Footer */}
    <div class="border-t border-gray-700 pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-gray-400 text-sm">
          © 2024 DeltaScan. Todos los derechos reservados. La radiología que
          cambia.
        </p>
        <div class="flex space-x-6 text-sm">
          <a
            href="/politica-privacidad"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Política de Privacidad
          </a>
          <a
            href="/terminos-de-servicio"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Términos de Servicio
          </a>
          <a
            href="/aviso-legal"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Aviso Legal
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
