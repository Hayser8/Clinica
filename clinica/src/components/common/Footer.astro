---
import {
  Phone,
  Mail,
  MapPin,
  Clock,
  Facebook,
  Instagram,
  Twitter,
} from "@lucide/astro";


const services = [
  "Ultrasonido Abdominal",
  "Ultrasonido Obstétrico",
  "Ultrasonido de Mama",
  "Doppler Vascular",
  "Biopsia de Mama",
  "Ultrasonido Tiroideo",
];

const quickLinks = [
  { name: "Inicio", href: "#inicio" },
  { name: "Servicios", href: "#servicios" },
  { name: "Especialistas", href: "#especialistas" },
  { name: "¿Por qué elegirnos?", href: "#por-que-elegirnos" },
  { name: "Contacto", href: "#contacto" },
];
---

<footer class="bg-gradient-to-br from-gray-900 to-gray-800 text-white">
  <div class="max-w-7xl mx-auto p-8">
    {/* Main Footer Content */}
    <div class="grid lg:grid-cols-4 md:grid-cols-2 gap-8 py-12">
      {/* Company Info */}
      <div class="space-y-6">
        <img
          src="/deltascan-logo.png"
          alt="DeltaScan"
          width={200}
          height={80}
          class="h-16 w-auto brightness-0 invert"
        />
        <p class="text-gray-300 leading-relaxed">
          Más de una década de experiencia en imágenes diagnósticas con
          tecnología de vanguardia y protocolos actualizados.
        </p>
        <div class="flex space-x-4">
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Facebook class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Instagram class="w-5 h-5" />
          </a>
          <a
            href="#"
            class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center hover:bg-pink-700 transition-colors"
          >
            <Twitter class="w-5 h-5" />
          </a>
        </div>
      </div>

      {/* Services */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">
          Servicios Principales
        </h3>
        <ul class="space-y-3">
          {
            services.map((service, index) => (
              <li key={index}>
                <a
                  href="#servicios"
                  class="text-gray-300 hover:text-pink-300 transition-colors"
                >
                  {service}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Quick Links */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">Enlaces Rápidos</h3>
        <ul class="space-y-3">
          {
            quickLinks.map((link, index) => (
              <li key={index}>
                <a
                  href={link.href}
                  class="text-gray-300 hover:text-pink-300 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Contact Info */}
      <div>
        <h3 class="text-xl font-bold mb-6 text-pink-300">Contacto</h3>
        <div class="space-y-4">
          <div class="flex items-start space-x-3">
            <MapPin class="w-5 h-5 text-pink-500 mt-1 flex-shrink-0" />
            <div>
              <p class="text-gray-300">Zona 10, Ciudad de Guatemala</p>
              <p class="text-gray-400 text-sm">Guatemala, Guatemala</p>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <Phone class="w-5 h-5 text-pink-500 flex-shrink-0" />
            <p class="text-gray-300">+502 1234-5678</p>
          </div>
          <div class="flex items-center space-x-3">
            <Mail class="w-5 h-5 text-pink-500 flex-shrink-0" />
            <p class="text-gray-300">info@deltascan.com.gt</p>
          </div>
          <div class="flex items-start space-x-3">
            <Clock class="w-5 h-5 text-pink-500 mt-1 flex-shrink-0" />
            <div>
              <p class="text-gray-300">Lun - Vie: 7:00 AM - 6:00 PM</p>
              <p class="text-gray-300">Sáb: 8:00 AM - 2:00 PM</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Bottom Footer */}
    <div class="border-t border-gray-700 pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <p class="text-gray-400 text-sm">
          © 2024 DeltaScan. Todos los derechos reservados. La radiología que
          cambia.
        </p>
        <div class="flex space-x-6 text-sm">
          <a
            href="#"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Política de Privacidad
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Términos de Servicio
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-pink-300 transition-colors"
          >
            Aviso Legal
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
