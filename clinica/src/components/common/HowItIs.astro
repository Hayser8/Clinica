---
import { Eye, Phone, ArrowRight } from "@lucide/astro";

type Step = {
  number: number;
  title: string;
  description: string;
  icon: any;     // componente de @lucide/astro
  color?: string; // gradiente Tailwind
};

type Props = {
  steps: Step[];
  heading: string;              // ⬅️ requerido
  subtitle?: string;
  badgeText?: string;
  showCta?: boolean;
  ctaHref?: string;
  ctaLabel?: string;
  timeEstimate?: string;        // ej. "15 a 30 minutos"
};

const {
  steps,
  heading,
  subtitle = "Un proceso simple, rápido y cómodo diseñado para tu tranquilidad",
  badgeText = "Proceso paso a paso",
  showCta = true,
  ctaHref = "/hacer-cita",
  ctaLabel = "Agenda tu cita ahora",
  timeEstimate = "15 a 30 minutos",
} = Astro.props as Props;
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white relative overflow-hidden">
  <div class="absolute top-20 right-10 w-32 h-32 bg-pink-100 rounded-full opacity-20"></div>
  <div class="absolute bottom-20 left-10 w-24 h-24 bg-pink-200 rounded-full opacity-30"></div>

  <div class="max-w-7xl mx-auto p-8 relative z-10">
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 bg-pink-100 text-pink-700 px-4 py-2 rounded-full text-sm font-medium mb-6">
        <Eye class="w-4 h-4" />
        {badgeText}
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{heading}</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">{subtitle}</p>
    </div>

    <div class="relative">
      <div class="hidden md:block absolute left-1/2 -translate-x-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-pink-200 via-pink-400 to-pink-200 rounded-full"></div>

      <div class="space-y-8 md:space-y-16">
        {steps.map((step, index) => {
          const Icon = step.icon;
          const alternate = index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse";
          const sidePad = index % 2 === 0 ? "md:pr-16" : "md:pl-16";
          const color = step.color ?? "from-pink-500 to-pink-600";

          return (
            <div class={`relative flex flex-col ${alternate} items-start`}>
              <div class="hidden md:block absolute left-1/2 -translate-x-1/2 w-6 h-6 bg-gradient-to-br from-pink-600 to-pink-700 rounded-full border-4 border-white shadow-xl z-10 animate-pulse"></div>

              <div class={`w-full md:w-1/2 ${sidePad}`}>
                <div class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-gray-100 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 relative overflow-hidden">
                  <div class="absolute top-0 right-0 w-32 h-32 bg-pink-50 rounded-full -translate-y-16 translate-x-16 opacity-50"></div>

                  <div class="flex items-start gap-4 md:gap-6 relative z-10">
                    <div class={`bg-gradient-to-br ${color} w-12 h-12 md:w-16 md:h-16 rounded-2xl flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform duration-300 shadow-lg`}>
                      <Icon class="w-6 h-6 md:w-8 md:h-8 text-white" />
                    </div>

                    <div class="flex-1">
                      <div class="flex items-center gap-3 md:gap-4 mb-3 md:mb-4">
                        <span class="bg-gradient-to-r from-pink-100 to-pink-200 text-pink-700 text-base md:text-lg font-bold px-3 md:px-4 py-1.5 md:py-2 rounded-full border border-pink-300">{step.number}</span>
                        <h3 class="text-lg md:text-xl font-bold text-gray-900">{step.title}</h3>
                      </div>

                      <p class="text-gray-600 leading-relaxed mb-4">{step.description}</p>

                      <div class="flex items-center gap-2 text-pink-600 text-sm font-medium">
                        <span>Paso {step.number} de {steps.length}</span>
                        <ArrowRight class="w-4 h-4" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>

    {showCta && (
      <div class="text-center mt-20">
        <div class="bg-gradient-to-r from-pink-600 to-pink-700 rounded-3xl p-8 md:p-12 text-white relative overflow-hidden">
          <div class="relative z-10">
            <div class="flex items-center justify-center gap-2 mb-4">
              <div class="w-3 h-3 bg-white rounded-full animate-pulse"></div>
              <div class="w-2 h-2 bg-white/70 rounded-full animate-pulse delay-100"></div>
              <div class="w-2 h-2 bg-white/50 rounded-full animate-pulse delay-200"></div>
            </div>
            <p class="text-2xl font-bold mb-6">Este estudio tarda aproximadamente {timeEstimate}.</p>
            <p class="text-pink-100 mb-8 text-lg">Proceso rápido, cómodo y con resultados inmediatos</p>

            <a
              href={ctaHref}
              class="bg-white text-pink-600 px-10 py-5 rounded-full font-bold text-lg hover:bg-gray-50 transition-all duration-300 inline-flex items-center gap-3 shadow-xl hover:shadow-2xl transform hover:-translate-y-1"
            >
              <Phone class="w-6 h-6" />
              {ctaLabel}
              <ArrowRight class="w-5 h-5" />
            </a>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
