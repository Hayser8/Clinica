---
import { Shield, Calendar } from "@lucide/astro";
interface Props {
  lastUpdated?: string;    // "22 de septiembre de 2025"
  lastUpdatedISO?: string; // "2025-09-22T00:00:00.000Z"
}
const { lastUpdated = "", lastUpdatedISO } = Astro.props as Props;
---

<section class="pt-3 pb-3 bg-white border-t border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Mobile: misma disposición (izq/der) pero más pequeño -->
    <div class="flex items-center justify-between gap-3 sm:gap-4 md:gap-6">

      <!-- Revisión clínica -->
      <div class="flex items-center gap-2 sm:gap-3">
        <div class="w-8 h-8 md:w-10 md:h-10 bg-pink-100 rounded-full grid place-items-center">
          <Shield class="w-4 h-4 md:w-5 md:h-5 text-pink-700" />
        </div>
        <div>
          <p class="text-xs md:text-sm font-medium text-gray-900">Revisión clínica</p>
          <p class="text-[11px] md:text-xs text-gray-600">Validado por especialistas.</p>
        </div>
      </div>

      <!-- Última actualización -->
      <div class="flex items-center gap-2 sm:gap-3">
        <div class="w-8 h-8 md:w-10 md:h-10 bg-pink-100 rounded-full grid place-items-center">
          <Calendar class="w-4 h-4 md:w-5 md:h-5 text-pink-700" />
        </div>
        <div class="text-right">
          <p class="text-xs md:text-sm font-medium text-gray-900">Última actualización</p>
          <p class="text-[11px] md:text-xs text-gray-600">
            {lastUpdatedISO
              ? <time datetime={lastUpdatedISO} itemprop="dateModified">{lastUpdated}</time>
              : lastUpdated}
          </p>
        </div>
      </div>

    </div>
  </div>
</section>
