---
import { Phone, Calendar, Stethoscope, Award } from "@lucide/astro";
---

<section
  id="inicio"
  class="relative overflow-hidden bg-gradient-to-br from-pink-600 via-pink-500 to-pink-700"
>
  <div class="absolute inset-0 bg-black/10"></div>
  <div class="relative max-w-7xl mx-auto p-8 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="text-white space-y-8">
        <div class="space-y-4">
          <div
            class="inline-flex items-center gap-2 bg-white/20 rounded-full px-4 py-2 mb-4"
          >
            <Stethoscope class="w-5 h-5" />
            <span class="font-semibold">Clínica Especializada</span>
          </div>
          <div class="space-y-2">
            <h1 class="text-5xl lg:text-6xl font-bold leading-tight text-white">
              Clínica de <span class="text-pink-100">Ultrasonidos</span>
            </h1>
            <div
              class="text-5xl lg:text-6xl font-bold leading-tight text-white"
              aria-label="DeltaScan"
            >
              <span class="text-pink-100">Delta</span>Scan
            </div>
          </div>
          <p class="text-xl text-pink-100 leading-relaxed">
            Somos una clínica con más de 10 años de experiencia en ecografía
            médica diagnóstica, empleando tecnología y protocolos actualizados.
            Dos médicos radiólogos trabajando juntos para proporcionar el mejor
            diagnóstico a tus estudios.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <!-- Hacer Cita -> /hacer-cita -->
          <a
            href="/hacer-cita"
            class="inline-flex items-center justify-center h-11 px-8 bg-white text-pink-600 hover:bg-pink-50 font-semibold rounded-md transition-colors w-full sm:w-auto"
          >
            <Phone class="w-5 h-5 mr-2" />
            Hacer Cita
          </a>

          <!-- Ver Servicios: mismo ancho en mobile -->
          <a
            href="#servicios"
            class="inline-flex items-center justify-center h-11 px-8 border border-white bg-transparent text-white hover:bg-white/10 rounded-md transition-colors w-full sm:w-auto"
          >
            <Calendar class="w-5 h-5 mr-2" />
            Ver Servicios
          </a>
        </div>
      </div>

      <!-- Imagen un poco más grande sin romper el contenedor principal -->
      <div class="flex-1 mx-auto max-w-xl lg:max-w-2xl">
        <div class="relative">
          <div class="bg-white/10 backdrop-blur-sm rounded-3xl p-3 shadow-2xl">
            <img
              src="/clinicadeultrasonidosdeltascan.webp"
              alt="Equipo de ultrasonido moderno en clínica especializada"
              class="w-full h-auto rounded-2xl object-cover"
            />
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-white/20 rounded-full blur-xl"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-fuchsia-400/30 rounded-full blur-2xl"></div>
        </div>
      </div>
    </div>
  </div>
</section>
