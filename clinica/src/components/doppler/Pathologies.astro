---
import { AlertTriangle } from "@lucide/astro";
const pathologies = [
  "Trombosis venosa profunda",
  "Insuficiencia venosa crónica",
  "Estenosis oclusiva en carótidas",
  "Aneurismas arteriales",
  "Fístulas arteriovenosas",
  "Compromiso renal en hipertensión",
  "Alteraciones del flujo en pacientes con diagnostico establecido de cirrosis",
  "Alteraciones del flujo materno-fetal",
];
---

<section class="py-16 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto p-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        <span class="text-pink-600">Patologías</span> que ayuda a diagnosticar un
        Ultrasonido Doppler
      </h2>
    </div>

    <div
      class="bg-gradient-to-br from-pink-50 to-pink-100 rounded-3xl p-8 md:p-12"
    >
      <div class="grid md:grid-cols-2 gap-6">
        {
          pathologies.map((pathology, index) => (
            <div
              key={index}
              class="flex items-center gap-4 bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              <div class="bg-pink-600 rounded-full p-2 flex-shrink-0">
                <AlertTriangle class="w-4 h-4 text-white" />
              </div>
              <p class="text-gray-800 font-medium leading-relaxed">
                {pathology}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
