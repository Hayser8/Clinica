---
import {
  MessageCircle,
  MapPin,
  Phone,
  FileText,
  Users,
  ExternalLink,
  Navigation,
  Facebook,
  Instagram,
} from "@lucide/astro";

const phoneNumber = "50245650865";
const whatsappMessage = "Hola, me gustaría agendar una cita";
const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(whatsappMessage)}`;

const wazeAddress =
  "10 Calle 2-30 zona 14, Edificio Prospere 14, 4to Nivel, Oficina 405, Guatemala";
const wazeUrl = `https://waze.com/ul/h9fxdupn7g`;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-fr">
  <!-- WhatsApp -->
  <a
    href={whatsappUrl}
    target="_blank"
    rel="nofollow noopener"
    class="lg:col-span-2 lg:row-span-2 bg-gradient-to-br from-green-500 to-green-600 rounded-3xl p-8 text-white relative overflow-hidden group hover:scale-[1.02] transition-transform duration-300 block"
  >
    <div class="relative z-10">
      <div class="flex items-center gap-4 mb-6">
        <div
          class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center"
        >
          <MessageCircle class="w-8 h-8" />
        </div>
        <div>
          <h3 class="text-2xl font-bold">WhatsApp</h3>
          <p class="text-green-100">Citas por mensaje</p>
        </div>
      </div>

      <div class="space-y-4">
        <div class="text-3xl font-bold">4565-0865</div>
        <p class="text-green-100 text-lg">
          La forma más rápida de agendar tu cita. Te respondemos inmediatamente.
        </p>

        <div
          class="inline-flex items-center gap-2 bg-white/20 hover:bg-white/30 backdrop-blur-sm px-6 py-3 rounded-xl font-semibold transition-colors"
        >
          <MessageCircle class="w-5 h-5" />
          Escribir ahora
          <ExternalLink class="w-4 h-4" />
        </div>
      </div>
    </div>

    <!-- Background shapes -->
    <div class="absolute -right-8 -bottom-8 w-32 h-32 bg-white/10 rounded-full">
    </div>
    <div class="absolute -right-4 -top-4 w-20 h-20 bg-white/5 rounded-full">
    </div>
  </a>

  <!-- Google Maps -->
  <div
    class="lg:col-span-2 lg:row-span-2 bg-white rounded-3xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden"
  >
    <div class="flex items-center gap-4 mb-4">
      <div
        class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center"
      >
        <MapPin class="w-6 h-6 text-white" />
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900">Nuestra Ubicación</h3>
        <p class="text-gray-600">Edificio Prospere 14</p>
      </div>
    </div>

    <div class="h-64 rounded-2xl overflow-hidden mb-4">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3861.2469939533016!2d-90.52121498843387!3d14.58499688584064!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8589a3c35e0e46c3%3A0x212255e6fe0d584b!2sProspere%2014!5e0!3m2!1ses!2sgt!4v1754000885700!5m2!1ses!2sgt"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded-2xl"></iframe>
    </div>

    <div class="text-sm text-gray-600">
      <p class="font-medium">10 Calle 2-30 zona 14</p>
      <p>4to Nivel, Oficina 405</p>
    </div>
  </div>

  <!-- Teléfono -->
  <a
    href="tel:+50224481110"
    class="bg-gradient-to-br from-pink-600 to-pink-700 rounded-3xl p-6 text-white relative overflow-hidden group hover:scale-[1.02] transition-transform duration-300 block"
  >
    <div class="relative z-10">
      <div
        class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4"
      >
        <Phone class="w-6 h-6" />
      </div>
      <h3 class="text-lg font-bold mb-2">Teléfono</h3>
      <p class="text-pink-100 text-sm mb-3">Dudas y comentarios</p>
      <div class="text-xl font-bold">2448-1110</div>
    </div>
    <div class="absolute -right-4 -bottom-4 w-16 h-16 bg-white/10 rounded-full">
    </div>
  </a>

  <!-- Consejos -->
  <div
    class="bg-white rounded-3xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300"
  >
    <div
      class="w-12 h-12 bg-gradient-to-br from-pink-600 to-pink-700 rounded-xl flex items-center justify-center mb-4"
    >
      <FileText class="w-6 h-6 text-white" />
    </div>
    <h3 class="text-lg font-bold text-gray-900 mb-4">Consejos</h3>
    <div class="space-y-3">
      <div class="flex items-start gap-2">
        <div class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></div>
        <p class="text-sm text-gray-600">Llega 15 min antes</p>
      </div>
      <div class="flex items-start gap-2">
        <div class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></div>
        <p class="text-sm text-gray-600">Trae tu DPI</p>
      </div>
      <div class="flex items-start gap-2">
        <div class="w-2 h-2 bg-pink-600 rounded-full mt-2 flex-shrink-0"></div>
        <p class="text-sm text-gray-600">Estudios previos</p>
      </div>
    </div>
  </div>

  <!-- Waze -->
  <a
    href={wazeUrl}
    target="_blank"
    rel="nofollow noopener"
    class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-3xl p-6 text-white relative overflow-hidden hover:scale-[1.02] transition-transform duration-300 block"
  >
    <div class="relative z-10">
      <div
        class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4"
      >
        <Navigation class="w-6 h-6" />
      </div>
      <h3 class="text-lg font-bold mb-2">Waze</h3>
      <p class="text-blue-100 text-xs mb-2">10 Calle 2-30 zona 14</p>
      <p class="text-blue-100 text-xs mb-3">Edificio Prospere 14, Of. 405</p>
      <div class="inline-flex items-center gap-1 text-xs font-semibold">
        Ver en Waze
        <ExternalLink class="w-3 h-3" />
      </div>
    </div>
    <div class="absolute -right-4 -bottom-4 w-16 h-16 bg-white/10 rounded-full">
    </div>
  </a>

  <!-- Redes Sociales -->
  <div
    class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-3xl p-6 text-white relative overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300"
  >
    <div class="relative z-10">
      <div
        class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center mb-4"
      >
        <Users class="w-6 h-6" />
      </div>
      <h3 class="text-lg font-bold mb-4">Redes Sociales</h3>
      <div class="flex flex-col space-y-2">
        <!-- Facebook arriba -->
        <a
          href="https://facebook.com/deltascan"
          target="_blank"
          rel="nofollow noopener"
          class="flex items-center gap-2 hover:underline"
        >
          <Facebook class="w-4 h-4" />
          Facebook
        </a>
        <!-- Instagram abajo -->
        <a
          href="https://instagram.com/deltascan"
          target="_blank"
          rel="nofollow noopener"
          class="flex items-center gap-2 hover:underline"
        >
          <Instagram class="w-4 h-4" />
          Instagram
        </a>
      </div>
    </div>
    <div class="absolute -right-4 -bottom-4 w-16 h-16 bg-white/10 rounded-full">
    </div>
  </div>
</div>
