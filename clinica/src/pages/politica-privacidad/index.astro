---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import Content from "../../components/politica-privacidad/Content.astro";

// ── SEO/OG mínimos + noindex
const pageTitle = "Política de Privacidad | DeltaScan";
const pageDescription =
  "Cómo protegemos y tratamos tus datos personales en DeltaScan: finalidades, conservación, derechos y vías de contacto.";
const pageUrl = "https://www.deltascan.gt/politica-privacidad";
const pageOgImage = "/og/politica-privacidad.webp"; // 1200×630 recomendado

// Migas para JSON-LD (si tu Layout las usa)
const crumbs = [{ label: "Política de Privacidad", href: "/politica-privacidad" }];
---

<Layout
  title={pageTitle}
  description={pageDescription}
  url={pageUrl}
  image={pageOgImage}
  crumbs={crumbs}
  noindex={true}
>
  <Header />

  <main>
    <Content />
  </main>

  <Footer />
</Layout>
