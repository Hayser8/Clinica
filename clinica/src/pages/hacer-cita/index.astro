---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/common/Header.astro";
import Footer from "../../components/common/Footer.astro";
import HeroSection from "../../components/cita/HeroSection.astro";
import ContactBentoGrid from "../../components/cita/ContactBentoGrid.astro";
import BreadCrumb from "../../components/common/BreadCrumb.astro";


// ── SEO/OG para la página de agenda (solo props necesarios para Layout)
const pageTitle = "Agenda tu cita | DeltaScan";
const pageDescription =
  "Programa tu ultrasonido con radiólogos especialistas. Horarios flexibles, contacto por WhatsApp o teléfono y resultados el mismo día.";
const pageUrl = "https://www.deltascan.gt/hacer-cita";
const pageOgImage = "/og/cita.webp"; // 1200×630 recomendado

// Migas para JSON-LD (no se agrega el componente visual)
const crumbs = [{ label: "Agenda tu cita", href: "/hacer-cita" }];

// Schema extra específico de esta página
const schemaExtra = [
  {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "@id": `${pageUrl}#contact`,
    url: pageUrl,
    name: "Agenda tu cita",
    inLanguage: "es",
    about: { "@id": "https://www.deltascan.gt/#clinic" }
  }
];
---

<Layout
  title={pageTitle}
  description={pageDescription}
  url={pageUrl}
  image={pageOgImage}
  crumbs={crumbs}
  schemaExtra={schemaExtra}
>
  <Header />

  <main class="bg-pink-600">
    <BreadCrumb crumbs={crumbs} color="pink" />
    <HeroSection />

    <section class="bg-white pt-2 pb-16">
      <div class="max-w-7xl mx-auto p-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Información de <span class="text-pink-600">Contacto</span>
          </h2>
        </div>

        <ContactBentoGrid />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
